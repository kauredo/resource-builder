# Convex
# Get these from https://dashboard.convex.dev after running `npx convex dev`
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# Convex Auth
# Generate a secure secret: openssl rand -base64 32
CONVEX_AUTH_PRIVATE_KEY=
# The URL where your Convex backend is deployed (same as NEXT_PUBLIC_CONVEX_URL but with .cloud ending)
CONVEX_SITE_URL=

# Google AI (Gemini) - for AI image generation
# Get from https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=

# AhaSend - Email
# Get from https://ahasend.com dashboard
AHASEND_API_KEY=
AHASEND_ACCOUNT_ID=

# Dodo Payments
DODO_PAYMENTS_API_KEY=          # From Dodo dashboard
DODO_PAYMENTS_WEBHOOK_KEY=      # From Dodo dashboard → Webhooks
DODO_PAYMENTS_ENVIRONMENT=test_mode  # or live_mode
DODO_PRODUCT_ID_MONTHLY=        # Create subscription product in Dodo dashboard
DODO_PRODUCT_ID_ANNUAL=         # Optional — create second product for annual
NEXT_PUBLIC_APP_URL=http://localhost:4000  # Your app's base URL
